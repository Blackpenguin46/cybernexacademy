{
  "version": 2,
  "buildCommand": "cp .env.preview .env.local && npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "nextjs",
  "regions": ["iad1"],
  "git": {
    "deploymentEnabled": {
      "main": true,
      "development": true,
      "feature": true
    }
  },
  "github": {
    "enabled": true,
    "silent": false,
    "autoAlias": false,
    "production": {
      "branches": []
    }
  },
  "crons": [
    {
      "path": "/api/cron/verify-links?key=${LINK_VERIFICATION_API_KEY}",
      "schedule": "0 3 * * *"
    }
  ],
  "env": {
    "LINK_VERIFICATION_API_KEY": "preview-placeholder-value-for-verification"
  }
}


