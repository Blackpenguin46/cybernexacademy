{
  "version": 2,
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "nextjs",
  "regions": ["iad1"],
  "git": {
    "deploymentEnabled": {
      "main": true,
      "development": true,
      "feature": true
    }
  },
  "crons": [
    {
      "path": "/api/cron/verify-links?key=${LINK_VERIFICATION_API_KEY}",
      "schedule": "0 3 * * *"
    }
  ],
  "env": {
    "LINK_VERIFICATION_API_KEY": "@link_verification_api_key"
  }
}


